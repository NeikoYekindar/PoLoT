<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".WelcomeActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/back_btn"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerVertical="true"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/background_panel" />

        <LinearLayout
            android:id="@+id/part1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/title1_verification_activity"
                android:textColor="@color/green2"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/title2_verification_activity"
                android:textSize="17sp" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part1"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/num1"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/background_inputf"
                android:fontFamily="@font/montserrat_extrabold"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:cursorVisible="true"/>

            <EditText
                android:id="@+id/num2"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:background="@drawable/background_inputf"
                android:fontFamily="@font/montserrat_extrabold"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:cursorVisible="true"/>

            <EditText
                android:id="@+id/num3"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:background="@drawable/background_inputf"
                android:fontFamily="@font/montserrat_extrabold"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:cursorVisible="true"/>

            <EditText
                android:id="@+id/num4"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:background="@drawable/background_inputf"
                android:fontFamily="@font/montserrat_extrabold"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:cursorVisible="true"/>
        </GridLayout>

        <LinearLayout
            android:id="@+id/part3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/part2"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/continue_btn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/countinue_button"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/part4"
        android:layout_below="@id/panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/line_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/line_dark" />
        <ImageView
            android:id="@+id/line_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/line_light" />
        <ImageView
            android:id="@+id/line_dark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/line_dark" />

    </LinearLayout>
</RelativeLayout>