<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SettingsFragment">

    <RelativeLayout
        android:id="@+id/header_setting"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/background_header">

        <TextView
            android:id="@+id/setting_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="27dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title1_setting"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_setting"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_setting">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header_setting"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/general_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/title2_setting"
                        android:textColor="@color/green"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@+id/general_label"
                        android:layout_weight="1"
                        android:background="@color/green" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_setting_component"
                        android:elevation="2dp">

                        <RelativeLayout
                            android:id="@+id/img_profile"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/icon_profile">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/user_fill" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/img_profile"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@string/profile"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/radius_10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/forward" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/change_password"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_setting_component"
                        android:elevation="2dp">

                        <RelativeLayout
                            android:id="@+id/img_change_pass"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/icon_change_password">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/key_fill" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/img_change_pass"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@string/changepass"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/radius_10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/forward" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container1"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/option_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/title3_setting"
                        android:textColor="@color/green"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@+id/general_label"
                        android:layout_weight="1"
                        android:background="@color/green" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contain2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="120dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/detection_sensitivity"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_setting_component"
                        android:elevation="2dp">

                        <RelativeLayout
                            android:id="@+id/img_detection_sensitivity"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/icon_detection">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/chart_fill" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/img_detection_sensitivity"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@string/detection"
                            android:textColor="@color/black"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/radius_10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/forward" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_setting_component"
                        android:elevation="2dp">

                        <RelativeLayout
                            android:id="@+id/alert_preferences"
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:background="@drawable/background_setting_component">

                            <RelativeLayout
                                android:id="@+id/img_alert_preferences"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="11dp"
                                android:background="@drawable/icon_alert_pref">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/bell_fill" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="25dp"
                                android:layout_toRightOf="@+id/img_alert_preferences"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="@string/alert"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <RelativeLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/radius_10dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/forward" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/label4_describe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/alert_preferences"
                            android:background="@color/light_gray"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/label4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Allow Alert Preferences"
                                android:textSize="14dp" />

                            <Switch
                                android:id="@+id/active_alert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/label4"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="13dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Automatically send notifications when a pothole is detected."
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_setting_component"
                        android:elevation="2dp">

                        <RelativeLayout
                            android:id="@+id/data_sharing"
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:background="@drawable/background_setting_component">

                            <RelativeLayout
                                android:id="@+id/img_data_sharing"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="11dp"
                                android:background="@drawable/icon_data_sharing">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/share" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="25dp"
                                android:layout_toRightOf="@+id/img_data_sharing"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="@string/data_sharing"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <RelativeLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/radius_10dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/forward" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/label3_describe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/data_sharing"
                            android:background="@color/light_gray"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/label3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="@string/sharing"
                                android:textSize="14dp" />

                            <Switch
                                android:id="@+id/active_sharing"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/label3"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="13dp"
                                android:fontFamily="@font/montserrat"
                                android:text="@string/sharing_detail"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sign_out"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_sign_out"
                        android:elevation="2dp">

                        <RelativeLayout
                            android:id="@+id/img_sign_out"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/icon_sign_out">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/sign_out_squre_fill" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@+id/img_sign_out"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="@string/sign_out"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/background_sign_out">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/forward_sign_out" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>